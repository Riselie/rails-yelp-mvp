<div class="container">
  <h1>My Restaurants</h1>

  <ol>
    <% @restaurants.each do |restaurant| %>
      <li> <strong><%= restaurant.name  %></strong> - Address: <%= restaurant.address %> | <%= link_to 'Show', restaurant %> | <%= link_to 'New Review', new_restaurant_review_path(restaurant) %> </li>
      <% end %>
  </ol>

  <h4> <%= link_to "New Restaurant", new_restaurant_path %></h4>

</div>
